# MATURA Configuration
# Copy this file to .env and fill in your API keys

# Gemini API Key (Required)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Optional: GPT API Key for future features
OPENAI_API_KEY=your-openai-api-key-here

# Figma API Configuration (Required for design integration)
# Get your key from: https://www.figma.com/developers/api#access-tokens
FIGMA_API_KEY=your-figma-api-key-here

# Default Figma File ID for template designs
# Format: File ID from Figma URL (e.g., https://www.figma.com/file/ABC123/Design -> ABC123)
DEFAULT_FIGMA_FILE_ID=GeCGXZi0K7PqpHmzXjZkWn

# Optional: Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Vercel deployment settings
VERCEL_URL=your-app.vercel.app